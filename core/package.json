{
  "name": "actordom",
  "version": "0.0.28",
  "description": "Actors",
  "type": "module",
  "exports": {
    ".": {
      "typescript": "./src/main.ts",
      "default": "./dist/main.js"
    },
    "./dom": "./dist/dom.js",
    "./worker": {
      "typescript": "./src/worker.ts",
      "default": "./dist/worker.js"
    },
    "./node": {
      "tyepscript": "./src/node.ts",
      "default": "./dist/node.js"
    },
    "./jsx-runtime": {
      "types": "./types/index.d.ts",
      "import": "./dist/jsx-runtime.js"
    }
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "wireit",
    "build:watch": "wireit",
    "dev": "wireit",
    "serve": "wireit",
    "test:browser": "wireit",
    "test:node": "wireit",
    "test": "wireit"
  },
  "keywords": [],
  "author": "Matthew Phillips <matthew@matthewphillips.info>",
  "license": "BSD-2-Clause",
  "dependencies": {
    "cookie": "^0.6.0",
    "incremental-dom": "^0.6.0",
    "node-qunit-puppeteer": "^2.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/qunit": "^2.19.10",
    "qunit": "^2.21.0"
  },
  "wireit": {
    "build": {
      "command": "tsc -p tsconfig.json",
      "files": [
        "src/**/*"
      ],
      "output": [
        "dist"
      ]
    },
    "build:watch": {
      "command": "tsc -p tsconfig.json --watch",
      "files": [
        "src/**/*"
      ],
      "output": [
        "dist"
      ]
    },
    "serve": {
      "command": "node server.mjs",
      "service": {
        "readyWhen": {
          "lineMatches": "Server listening"
        }
      }
    },
    "dev": {
      "dependencies": [
        "build:watch",
        "serve"
      ]
    },
    "test:browser": {
      "command": "node-qunit-puppeteer http://localhost:8023/test/browser/test.html 10000",
      "dependencies": [
        "build",
        "serve"
      ],
      "files": [
        "src/**/*"
      ],
      "output": []
    },
    "test:node": {
      "command": "node --test ./test/node/render.js",
      "dependencies": [
        "build"
      ],
      "files": [
        "src/**/*",
        "test/**/*"
      ],
      "output": []
    },
    "test": {
      "dependencies": [
        "test:node",
        "test:browser"
      ]
    }
  }
}
